<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="wrap_content"

                                                  android:src="@drawable/logo"
                                                  android:layout_centerHorizontal="true"
                                                  android:layout_marginTop="30dp"
                                                  android:layout_height="216dp">
    </de.hdodenhof.circleimageview.CircleImageView>



    <ViewFlipper android:layout_width="match_parent" android:layout_height="200dp"
                 android:layout_centerHorizontal="true"
                 android:flipInterval="1800"
                 android:autoStart="true"
                 android:inAnimation="@android:anim/slide_in_left"
                 android:outAnimation="@android:anim/slide_out_right"
                 android:layout_marginTop="290dp">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/checklist"
        />
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/reminder"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/progress"/>
    </ViewFlipper>

    <ViewFlipper android:layout_width="match_parent" android:layout_height="75dp"
                 android:layout_centerHorizontal="true"
                 android:flipInterval="1800"
                 android:autoStart="true"
                 android:inAnimation="@android:anim/slide_in_left"
                 android:outAnimation="@android:anim/slide_out_right"
                 android:layout_marginTop="520dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Manage all your tasks with ManageMe..."
                  android:textColor="@color/black"
                  android:textSize="27sp"
                  android:paddingLeft="15sp"
                  android:textAlignment="center"
                  android:textStyle="bold|italic">

        </TextView>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Create interactive reminders through ManageMe..."
                  android:textColor="@color/black"
                  android:textSize="27sp"
                  android:paddingLeft="15sp"
                  android:textAlignment="center"
                  android:textStyle="bold|italic">

        </TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Track your daily progress with ManageMe..."
                  android:textColor="@color/black"
                  android:textSize="27sp"
                  android:paddingLeft="15sp"
                  android:textAlignment="center"
                  android:textStyle="bold|italic">

        </TextView>
    </ViewFlipper>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="330dp" android:layout_height="50dp"
                                               android:layout_centerHorizontal="true"
                                               android:layout_marginTop="635dp"
                                               android:background="@drawable/roundshape"
                                               android:text="Log In"
                                               android:textStyle="bold|italic"
                                               android:textSize="15sp"
                                               android:textColor="@color/white">
    </androidx.appcompat.widget.AppCompatButton>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="730dp"
              android:textColor="#228B22"
              android:text="New to ManageMe ? Sign Up"
              android:textSize="23sp"
              android:textStyle="bold|italic">

    </TextView>


</RelativeLayout>