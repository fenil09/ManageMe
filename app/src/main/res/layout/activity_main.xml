<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="@dimen/_335sdp"
                                                  android:src="@drawable/logo"
                                                  android:layout_centerHorizontal="true"
                                                  android:layout_marginTop="@dimen/_7sdp"
                                                  android:layout_height="@dimen/_230sdp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <ViewFlipper android:layout_width="match_parent" android:layout_height="350dp"
                 android:layout_centerHorizontal="true"
                 android:flipInterval="1900"
                 android:autoStart="true"
                 android:inAnimation="@android:anim/slide_in_left"
                 android:outAnimation="@android:anim/slide_out_right"
                 android:id="@+id/f1"
                 android:layout_marginTop="290dp">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/checklist">
        </ImageView>

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/reminder">
        </ImageView>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/progress">
        </ImageView>


    </ViewFlipper>


    <androidx.appcompat.widget.AppCompatButton android:layout_width="@dimen/_250sdp"
                                               android:layout_height="@dimen/_40sdp"
                                               android:layout_centerHorizontal="true"
                                               android:layout_marginTop="660dp"
                                               android:background="@drawable/roundshape"
                                               android:text="Log In"
                                               android:id="@+id/button1"
                                               android:textStyle="bold|italic"
                                               android:textSize="15sp"
                                               android:textColor="@color/white">
    </androidx.appcompat.widget.AppCompatButton>

    <TextView android:layout_width="@dimen/_260sdp" android:layout_height="@dimen/_30sdp"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="@dimen/_575sdp"
              android:textColor="#228B22"
              android:text="New to ManageMe ? Sign Up"
              android:textSize="@dimen/_20sdp"
              android:textStyle="bold|italic">

    </TextView>


</RelativeLayout>