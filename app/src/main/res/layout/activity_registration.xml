<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registration">
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4" app:layout_constraintGuide_begin="277dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" android:id="@+id/constraintLayout2">

        <ImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp" app:srcCompat="@drawable/logo" android:id="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="519dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="268dp"
                android:layout_height="52dp"
                android:inputType="textPersonName"
                android:hint="Enter your Email"
                android:padding="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textStyle="bold|italic"
                android:textSize="@dimen/_13sdp"
                android:paddingStart="@dimen/_50sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="@drawable/roundedittext"
                android:ems="10"
                android:id="@+id/edit1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.034"
                app:layout_constraintHorizontal_bias="0.496"/>
        <ImageView
                android:layout_width="41dp"
                android:layout_height="35dp" app:srcCompat="@drawable/i6" android:id="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/edit1"
                app:layout_constraintStart_toStartOf="@+id/edit1" app:layout_constraintTop_toTopOf="@+id/edit1"
                app:layout_constraintBottom_toBottomOf="@+id/edit1" app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintVertical_bias="0.529"/>


        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="268dp"
                android:layout_height="52dp"
                android:inputType="textPassword"
                android:hint="Enter your Username"
                android:textStyle="bold|italic"
                android:textColorHint="@color/white"
                android:background="@drawable/roundedittext"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_50sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:ems="10"
                android:id="@+id/edit2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.203" app:layout_constraintHorizontal_bias="0.496"/>
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="268dp"
                android:layout_height="52dp"
                android:inputType="textPassword"
                android:hint="Enter your password"
                android:textStyle="bold|italic"
                android:textColorHint="@color/white"
                android:background="@drawable/roundedittext"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_50sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:ems="10"
                android:id="@+id/edit3"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.37"/>
        <ImageView
                android:layout_width="41dp"
                android:layout_height="37dp" app:srcCompat="@drawable/p6" android:id="@+id/imageView7"
                app:layout_constraintEnd_toEndOf="@+id/edit3"
                app:layout_constraintStart_toStartOf="@+id/edit3" app:layout_constraintTop_toTopOf="@+id/edit3"
                app:layout_constraintHorizontal_bias="0.057" app:layout_constraintBottom_toBottomOf="@+id/edit3"
                app:layout_constraintVertical_bias="0.466"/>


        <androidx.appcompat.widget.AppCompatButton android:layout_width="254dp"
                                                   android:layout_height="45dp"
                                                   android:layout_centerHorizontal="true"
                                                   android:background="@drawable/roundshape"
                                                   android:text="Register"
                                                   android:id="@+id/button1"
                                                   android:textStyle="bold|italic"
                                                   android:textSize="15sp"
                                                   android:textColor="@color/white"
                                                   app:layout_constraintEnd_toEndOf="parent"
                                                   app:layout_constraintStart_toStartOf="parent"
                                                   app:layout_constraintBottom_toBottomOf="parent"
                                                   app:layout_constraintTop_toTopOf="parent"
                                                   app:layout_constraintHorizontal_bias="0.496"
                                                   app:layout_constraintVertical_bias="0.552">
        </androidx.appcompat.widget.AppCompatButton>
        <TextView
                android:text="Feeling Lazy? Drag the Google Sign In "
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:layout_width="312dp"
                android:layout_height="52dp" android:id="@+id/textView1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintVertical_bias="0.723"/>
        <com.ncorti.slidetoact.SlideToActView android:layout_width="320dp"
                                              android:layout_height="54dp"
                                              app:layout_constraintTop_toTopOf="parent"
                                              app:layout_constraintBottom_toBottomOf="parent"
                                              app:layout_constraintEnd_toEndOf="parent"
                                              app:layout_constraintStart_toStartOf="parent"
                                              app:outer_color="#228B22"
                                              app:text="Google Sign In"
                                              android:id="@+id/slide1"
                                              app:text_style="italic"
                                              app:animate_completion="true"
                                              app:slider_icon="@drawable/google"
                                              app:complete_icon="@drawable/google"
                                              app:text_size="@dimen/_14sdp"
                                              app:area_margin="8dp"
                                              app:icon_margin="8dp"
                                              app:layout_constraintVertical_bias="0.853"
                                              app:layout_constraintHorizontal_bias="0.493">

        </com.ncorti.slidetoact.SlideToActView>
        <ImageView
                android:layout_width="41dp"
                android:layout_height="35dp" app:srcCompat="@drawable/man" android:id="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/edit2"
                app:layout_constraintStart_toStartOf="@+id/edit2" app:layout_constraintBottom_toBottomOf="@+id/edit2"
                app:layout_constraintTop_toTopOf="@+id/edit2" app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintVertical_bias="0.411"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>